{
    "name": "wsudor_front_end",
    "description": "WSU Digital Collections Front-End",
    "keywords": ["digital collections","fedora commons"],
    "homepage": "https://digital.library.wayne.edu",    
    "authors": [
        {
            "name": "LibWebmaster",
            "email": "libwebmaster@wayne.edu"            
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.1",
        "guzzlehttp/guzzle": "^6.2",
        "php-middleware/php-debug-bar": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:9000 -t public public/index.php",
        "test": "phpunit"
	}

}
